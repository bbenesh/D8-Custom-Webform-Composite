{#
/**
 * @file
 * Default theme implementation of colleges attended composite.
 *
 * Available variables:
 * - content: The colleges attended composite to be output.

 * @see template_preprocess_zombree_webform()
 *
 * @ingroup themeable
 */
#}
{{ attach_library('zombree_webform/zombree_webform') }}
{% if flexbox %}

    <div class="webform-flexbox">
      {% if content.employment_date %}
        <div class="webform-flex webform-flex--1"><div class="webform-flex--container">{{ content.employment_date }}</div></div>
      {% endif %}
      {% if content.employer_name %}
        <div class="webform-flex webform-flex--1"><div class="webform-flex--container">{{ content.employer_name }}</div></div>
      {% endif %}
      {% if content.end_date %}
        <div class="webform-flex webform-flex--1"><div class="webform-flex--container">{{ content.employer_city_state }}</div></div>
      {% endif %}
      {% if content.degrees_earned %}
        <div class="webform-flex webform-flex--1"><div class="webform-flex--container">{{ content.employer_physci_or_engineer }}</div></div>
      {% endif %}
    </div>

{% else %}
    <div class="zombree_employment_info">
  {{ content }}
    </div>
{% endif %}

